@model Appr_Part2.Models.VolunteerViewModel
@{
    ViewData["Title"] = "Volunteer Registration";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark text-center py-4 rounded-top-4">
                    <h4 class="mb-0 fw-bold"><i class="fas fa-hands-helping me-2"></i>Volunteer Registration</h4>
                </div>
                <div class="card-body p-5">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger border-0 rounded-3 shadow-sm mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-circle fa-2x text-danger me-3"></i>
                                <div class="fw-semibold">@TempData["ErrorMessage"]</div>
                            </div>
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger rounded-3"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Skills" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-tools text-warning"></i></span>
                                <textarea asp-for="Skills" class="form-control" rows="4"
                                          placeholder="List your skills and expertise (e.g., First Aid, Construction, Counseling, Logistics, etc.)"></textarea>
                            </div>
                            <span asp-validation-for="Skills" class="text-danger small mt-1"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Availability" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-calendar-check text-warning"></i></span>
                                <select asp-for="Availability" class="form-control">
                                    <option value="">Select Availability</option>
                                    <option value="Weekdays">Weekdays</option>
                                    <option value="Weekends">Weekends</option>
                                    <option value="Evenings">Evenings</option>
                                    <option value="Flexible">Flexible</option>
                                    <option value="Emergency Only">Emergency Response Only</option>
                                </select>
                            </div>
                            <span asp-validation-for="Availability" class="text-danger small mt-1"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="PreferredLocation" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-map-marker-alt text-warning"></i></span>
                                <input asp-for="PreferredLocation" class="form-control"
                                       placeholder="Preferred area for volunteer work" />
                            </div>
                            <span asp-validation-for="PreferredLocation" class="text-danger small mt-1"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="EmergencyContact" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-phone text-warning"></i></span>
                                <input asp-for="EmergencyContact" class="form-control"
                                       placeholder="Emergency contact name and phone number" />
                            </div>
                            <span asp-validation-for="EmergencyContact" class="text-danger small mt-1"></span>
                        </div>

                        <div class="form-check mb-5 p-4 bg-light rounded-3">
                            <input asp-for="HasTransportation" class="form-check-input" style="transform: scale(1.2);" />
                            <label asp-for="HasTransportation" class="form-check-label fw-semibold ms-2">
                                I have reliable transportation
                            </label>
                        </div>

                        <div class="alert alert-info border-0 rounded-3 shadow-sm mb-4">
                            <div class="d-flex">
                                <i class="fas fa-info-circle fa-2x text-info me-3"></i>
                                <div>
                                    <h6 class="fw-bold mb-2">Volunteer Information</h6>
                                    <small class="text-muted">
                                        By registering as a volunteer, you agree to be contacted for disaster relief efforts
                                        based on your availability and skills. Your information will be kept confidential
                                        and used only for coordination purposes.
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex flex-column flex-md-row justify-content-end gap-3 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 py-2">Cancel</a>
                            <button type="submit" class="btn btn-warning btn-lg px-4 py-2">
                                <i class="fas fa-user-check me-2"></i> Register as Volunteer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}